                    </GroupStyle.ContainerStyle>
                </GroupStyle>
                --><!-- Style for groups under the top level. --><!--
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <DockPanel Margin="25 0 0 0" Background="LightBlue">
                                <TextBlock Text="{Binding Path=Name}" Foreground="Blue" Margin="30,0,0,0"/>
